# AI Resume Management System - Frontend Environment Variables
# 
# IMPORTANT: 
# - Copy this file to .env and update the values
# - Only REACT_APP_ prefixed variables are exposed to the browser
# - Never put sensitive backend secrets here (API keys, etc.)
# - This file contains non-sensitive configuration only

# API Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_API_BASE_PATH=/api/v1

# Application Configuration
REACT_APP_NAME="AI Resume Management"
REACT_APP_VERSION=1.0.0

# Environment
REACT_APP_ENV=development

# Features (can be toggled for different environments)
REACT_APP_ENABLE_DEBUG=true
REACT_APP_ENABLE_ANALYTICS=false

# Upload Configuration
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_ALLOWED_FILE_TYPES=.pdf

# UI Configuration
REACT_APP_ITEMS_PER_PAGE=10
REACT_APP_DEFAULT_THEME=light
